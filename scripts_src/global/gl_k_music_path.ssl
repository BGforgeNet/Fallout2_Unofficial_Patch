#include "..\headers\sfall\sfall.h"

procedure start begin
   // only change if both values are default
   if get_ini_string("fallout2.cfg|sound|music_path1") == "data\\sound\\music\\" // backslashes need to be escaped
   and get_ini_string("fallout2.cfg|sound|music_path2") == "data\\sound\\music\\"
   then begin
      set_ini_setting("fallout2.cfg|sound|music_path2", "sound\\music\\");
      debug_msg("gl_k_music_path: changed music_path2 to sound\\music\\\n");
   end
end
